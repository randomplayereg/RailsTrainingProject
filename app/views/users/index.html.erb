<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Other info</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.admin == false %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= pluralize(user.books.count, 'book')%></td>
          <td><%= link_to 'Show', user %></td>
          <% if logged_in? %>
            <% if current_user == user || current_user.admin == true %>
              <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          <% end %>
        </tr>
      <% end%>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <%= will_paginate %>
</div>

